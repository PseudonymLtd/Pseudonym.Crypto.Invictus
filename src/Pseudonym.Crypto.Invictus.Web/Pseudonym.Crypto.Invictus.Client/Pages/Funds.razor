@page "/"
@inject IUserSettings UserSettings
@inject IApiClient Client
@inject IAppState AppState

<h1>Funds Overview</h1>

<div class="alert alert-secondary mt-4" role="alert">
    <span class="oi oi-info mr-2" aria-hidden="true"></span>
    <span class="text-wrap">
        Below shows the summary of funds provided by <a href="https://invictuscapital.com/" target="_blank">Invictus Capital</a>.
        There are currently @(funds?.Count ?? 0) available funds.
    </span>
</div>

@if (!funds.Any())
{
    <div class="text-center">
        <div class="spinner-border text-danger" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Token</th>
                <th>Circulating Supply</th>
                <th>Net Value</th>
                <th>Nav</th>
                <th>Market Value</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fund in funds.OrderBy(x => x.Name))
            {
                <tr>
                    <td><FundLink DisplayName="@fund.DisplayName" Name="@fund.Name" /></td>
                    <td><Token Symbol="@fund.Token.Symbol.ToString()" ContractAddress="@fund.Token.Address" /></td>
                    <td><LargeNumber Value="fund.CirculatingSupply" Decimals="2" /></td>
                    <td><Money Value="@fund.NetAssetValue" CurrencyCode="UserSettings.CurrencyCode" /></td>
                    <td><Money Value="@fund.NetAssetValuePerToken" CurrencyCode="UserSettings.CurrencyCode" /></td>
                    <td><Money Value="fund.MarketValue ?? 0" CurrencyCode="UserSettings.CurrencyCode" /></td>
                    <td><Money Value="fund.MarketValuePerToken ?? 0" CurrencyCode="UserSettings.CurrencyCode" /></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private readonly List<ApiFund> funds;

    public Funds()
    {
        funds = new List<ApiFund>();
    }

    protected override async Task OnInitializedAsync()
    {
        AppState.Assign(async () => await DrawAsync(false));

        await DrawAsync(true);
    }

    private async Task DrawAsync(bool firstRender)
    {
        if (!firstRender)
        {
            funds.Clear();

            StateHasChanged();
        }

        await foreach (var item in Client.ListFundsAsync())
        {
            funds.Add(item);
        }

        StateHasChanged();
    }
}
