@inject IUserSettings UserSettings
@inject IAppState AppState
@inject NavigationManager NavigationManager

<div class="@Classes" @onclick="OnClick" style="padding-top: 12px; padding-bottom: 12px; border: 1px solid transparent;">
    <img src="images/funds/@FundImageName" class="mr-3" alt="@Fund.DisplayName">
    <div class="media-body">
        <h5 class="mt-0">
            <FundLink DisplayName="@Fund.DisplayName" Name="@Fund.Name" />
            <a class="badge badge-secondary" href="@Fund.Links.Lite" style="float: right; margin-left: 5px;" target="_blank">Lite</a>
            <a class="badge @Fund.Token.Symbol.ToString().ToLower()" href="@Fund.Links.Fact" style="float: right; margin-left: 5px;" target="_blank">Fact</a>
        </h5>
        <span class="text-wrap" style="font-size: small">
            @Fund.Description
        </span>
        <hr />
        <div class="container-fluid" style="max-width: none">
            <div class="row">
                <div class="col-xs-auto col-sm-auto col-md-auto col-lg-auto col-xl-auto" style="min-width: 200px; padding-bottom: 15px;">
                    <small style="font-weight: bold;">Token</small>
                    <div>
                        <Token Symbol="@Fund.Token.Symbol.ToString()" ContractAddress="@Fund.Token.Address" />
                    </div>
                </div>
                <div class="col-xs-auto col-sm-auto col-md-auto col-lg-auto col-xl-auto" style="min-width: 200px; padding-bottom: 15px;">
                    <small style="font-weight: bold;">Circ. Supply</small>
                    <div>
                        <LargeNumber Value="Fund.CirculatingSupply" Decimals="2" />
                    </div>
                </div>
                <div class="col-xs-auto col-sm-auto col-md-auto col-lg-auto col-xl-auto" style="min-width: 200px; padding-bottom: 15px;">
                    <small style="font-weight: bold;">Net Value (@UserSettings.CurrencyCode.GetSymbol())</small>
                    <div>
                        <Money Value="@Fund.NetAssetValue" CurrencyCode="UserSettings.CurrencyCode" />
                    </div>
                </div>
                <div class="col-xs-auto col-sm-auto col-md-auto col-lg-auto col-xl-auto" style="min-width: 200px; padding-bottom: 15px;">
                    <small style="font-weight: bold;">Nav (@UserSettings.CurrencyCode.GetSymbol())</small>
                    <div>
                        <Money Value="@Fund.NetAssetValuePerToken" CurrencyCode="UserSettings.CurrencyCode" />
                    </div>
                </div>
                <div class="col-xs-auto col-sm-auto col-md-auto col-lg-auto col-xl-auto" style="min-width: 200px; padding-bottom: 15px;">
                    <small style="font-weight: bold;">Market Value (@UserSettings.CurrencyCode.GetSymbol())</small>
                    <div>
                        <Money Value="Fund.MarketValue ?? 0" CurrencyCode="UserSettings.CurrencyCode" />
                    </div>
                </div>
                <div class="col-xs-auto col-sm-auto col-md-auto col-lg-auto col-xl-auto" style="min-width: 200px; padding-bottom: 15px;">
                    <small style="font-weight: bold;">Price (@UserSettings.CurrencyCode.GetSymbol())</small>
                    <div>
                        <Money Value="Fund.MarketValuePerToken ?? 0" CurrencyCode="UserSettings.CurrencyCode" />
                    </div>
                </div>
                </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public ApiFund Fund { get; set; }

    [Parameter]
    public bool Clickable { get; set; }

    public string FundImageName => $"{Fund.Token.Symbol}.png";

    public string Classes => $"media " +
        (Clickable
            ? "clickable-row"
            : string.Empty);

    protected override void OnInitialized()
    {
        AppState.Assign(StateHasChanged);
    }

    protected void OnClick()
    {
        if (Clickable)
        {
            NavigationManager.NavigateTo($"/funds/{Fund.Token.Symbol}");
        }
    }
}
