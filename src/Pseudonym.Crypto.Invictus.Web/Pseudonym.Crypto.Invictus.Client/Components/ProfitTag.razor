<small style="font-size: 10px; vertical-align: top; font-weight: bold; @Style">
    @(Value < 0 ? "-" : "+")<LargeNumber Value="Math.Abs(Value)" Decimals="Decimals" ShowZeroValue="true" Suffix="@Suffix" />
</small>

@code {
    [Parameter]
    public decimal Value { get; set; }

    [Parameter]
    public int Decimals { get; set; } = 2;

    [Parameter]
    public string Suffix { get; set; }

    internal string Style => $"color: {(Value < 0 ? "red" : "green")};";
}
