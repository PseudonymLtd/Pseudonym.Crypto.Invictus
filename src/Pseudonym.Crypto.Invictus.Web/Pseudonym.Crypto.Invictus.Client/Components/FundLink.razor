<Link DisplayText="@DisplayName" CaptionText="View on Invictus" Url="@Link" Classes="@Classes" />

@code {
    [Parameter]
    public string DisplayName { get; set; }

    [Parameter]
    public string Name { get; set; }

    internal string Classes => DisplayName.Length > 20
        ? "text-mob-md"
        : string.Empty;

    internal string Link => $"https://invictuscapital.com/{Name.Replace(" ", string.Empty).ToLower()}";
}
