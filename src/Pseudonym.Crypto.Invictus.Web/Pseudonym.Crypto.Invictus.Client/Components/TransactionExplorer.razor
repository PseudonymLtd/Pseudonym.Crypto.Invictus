@code {

    private readonly List<BusinessTransaction> transactions;

    public TransactionExplorer()
    {
        transactions = new List<BusinessTransaction>();
    }

    [Parameter]
    public ApiFund Fund { get; set; }

    [Parameter]
    public IProduct Product { get; set; }

    protected override void OnInitialized()
    {
        AppState.Assign(() => Draw(false));

        Draw(true);
    }

    private void Draw(bool firstRender)
    {
        if (!firstRender)
        {
            transactions.Clear();

            StateHasChanged();
        }

        
    }
}
