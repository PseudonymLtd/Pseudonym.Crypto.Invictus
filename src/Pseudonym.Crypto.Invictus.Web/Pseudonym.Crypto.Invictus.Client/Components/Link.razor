<div class="tooltip-container">
    <span class="@TextClasses" style="@TextStyle">@DisplayText</span> <a href="@Url" target="_blank"><span class="oi oi-external-link @LinkClasses" style="@LinkStyle"></span></a>
    <span class="tooltip-text" style="font-size: 12px; width: 120px">@CaptionText</span>
</div>

@code {
    [Parameter]
    public string DisplayText { get; set; }

    [Parameter]
    public string CaptionText { get; set; }

    [Parameter]
    public int FontSize { get; set; } = 16;

    [Parameter]
    public string TextClasses { get; set; }

    [Parameter]
    public string LinkClasses { get; set; }

    [Parameter]
    public string Url { get; set; }

    internal string TextStyle => $"font-size: {FontSize}px;";

    internal string LinkStyle => $"font-size: {FontSize - 4}px;";
}
